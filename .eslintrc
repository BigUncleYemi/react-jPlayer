{
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "extends": "airbnb",
    "rules": {
      "react/jsx-indent": 0,
      "react/forbid-prop-types": "off",
      "jsx-a11y/no-static-element-interactions": "off",
      "import/no-extraneous-dependencies": ["error", { "devDependencies": [
        "jsdom.js",
          "**/*.spec.*{js,jsx}",
          "**/*.config.*js",
          "src/util/mockData/**/*"
      ] }]
    },
    "plugins": [
      "react"
    ],
    "overrides": [
      {
        "files": ["**/*.spec.*{js,jsx}"],
        "rules": {
          "react/prop-types": "off",
          "no-underscore-dangle": "off"
        }
      }
    ]
}