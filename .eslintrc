{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "extends": "airbnb",
    "rules": {
        "max-len": ["error", { "code": 100, "ignoreComments": true }],
        "react/forbid-prop-types": "off",
        "jsx-a11y/no-static-element-interactions": "off",
        "import/no-extraneous-dependencies": ["error", { "devDependencies": [
            "src/jsdom.js",
             "**/*.spec.*{js,jsx}",
             "**/*.acceptance.js",
             "**/*.config.*js"
        ] }],
        "no-underscore-dangle": "off"
    },
    "plugins": [
        "react"
    ]
}