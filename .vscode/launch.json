{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug Unit Tests",
      "type": "node2",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "src/**/*.spec.{js,jsx}",
        "--opts",
        "./mocha.opts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "BABEL_ENV": "test"
      }
    },
    {
      "request": "launch",
      "name": "Debug Acceptance Tests",
      "type": "node2",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "src/**/*.acceptance.js",
        "-t",
        "100000ms",
        "--opts",
        "./mocha.opts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null
    }
  ]
}